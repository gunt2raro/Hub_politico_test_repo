<?php

	/***
	* Class helper that manages all date changes
	********************************/
	class Date_formatter_helper{

		/***
		* format_date_es
		* Method that returns date in spanish
		* @param $d - Day
		* @param $m - Month
		* @param $y - Year
		* @return string with date
		**************************************************/
		public static function format_date_es( $d, $m, $y ){

			$months = array( 'enero', 'febrero', 'marzo', 'abril', 'mayo', 'junio', 'agosto', 'septiembre', 'octubre', 'noviembre', 'diciembre' );

			$date = $d . " de " . $months[$m-1] . " del " . $y;

			return $date;

		}//End of format_date_es function

	}//End of date_formatter_helper

?>
